<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AI Assistant</title>
  <style>
    @font-face {
      font-family: 'LT Saeada';
      src: url('LT-Saeada-Medium.woff2') format('woff2');
      font-weight: normal;
      font-style: normal;
    }

    body {
      font-family: 'LT Saeada', sans-serif;
      margin: 0;
      padding: 0;
      background: #F4F6F9;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .chat-wrapper {
      width: 100%;
      max-width: 500px;
      background: white;
      display: flex;
      flex-direction: column;
      height: 95vh;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    }

    .chat-header {
      background: #1C1C1C;
      color: white;
      padding: 16px;
      font-size: 20px;
      font-weight: bold;
      position: sticky;
      top: 0;
      z-index: 10;
    }

    .chat-box {
      flex: 1;
      overflow-y: auto;
      padding: 16px;
      display: flex;
      flex-direction: column;
    }

    .message {
      max-width: 80%;
      padding: 12px 16px;
      border-radius: 12px;
      margin-bottom: 10px;
      word-wrap: break-word;
      line-height: 1.4;
      animation: fadeIn 0.3s ease-out forwards;
    }

    .user {
      background: #D6E4FF;
      align-self: flex-end;
      border-top-right-radius: 0;
    }

    .bot {
      background: #F0F0F0;
      align-self: flex-start;
      border-top-left-radius: 0;
    }

    .timestamp {
      font-size: 11px;
      margin-top: 4px;
      color: #777;
    }

    .input-wrapper {
      padding: 16px;
      border-top: 1px solid #eee;
      background: #fff;
    }

    .input-box {
      display: flex;
      gap: 10px;
    }

    input[type="text"] {
      flex: 1;
      padding: 12px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 14px;
    }

    input::placeholder {
      color: #bbb;
    }

    button {
      padding: 12px 16px;
      background: #1C1C1C;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>
<body>
  <div class="chat-wrapper">
    <div class="chat-header">AI Assistant</div>
    <div class="chat-box" id="chat"></div>
    <div class="input-wrapper">
      <div class="input-box">
        <input type="text" id="userInput" placeholder="Type your message..." oninput="hidePlaceholder(this)" />
        <button onclick="sendMessage()">Send</button>
      </div>
    </div>
  </div>

  <script>
    function hidePlaceholder(input) {
      input.placeholder = input.value === '' ? 'Type your message...' : '';
    }

    async function sendMessage() {
      const input = document.getElementById('userInput');
      const chat = document.getElementById('chat');
      const userMessage = input.value.trim();
      if (!userMessage) return;
      input.value = '';
      input.placeholder = 'Type your message...';

      const userBubble = `<div class="message user">${userMessage}<div class="timestamp">You</div></div>`;
      chat.innerHTML += userBubble;
      chat.scrollTop = chat.scrollHeight;

      const res = await fetch('/api/chat', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ message: userMessage })
      });
      const data = await res.json();

      const botReply = (data.reply || '').trim();
      if (botReply && !botReply.toLowerCase().includes('thinking')) {
        const botBubble = `<div class="message bot">${botReply}<div class="timestamp">Bot</div></div>`;
        chat.innerHTML += botBubble;
        chat.scrollTop = chat.scrollHeight;
      }
    }
  </script>
</body>
</html>
